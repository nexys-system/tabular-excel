{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "src/lib",
    "target": "ES2020",

    "lib": [
     "dom", "es2020", "esnext"
    ],
    "module": "es2020",

    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    //"isolatedModules": true,
    "outDir": "dist",
    "noEmit": true,
    "jsx": "react",
    "downlevelIteration":true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}